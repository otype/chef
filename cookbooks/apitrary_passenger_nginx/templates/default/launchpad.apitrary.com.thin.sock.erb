upstream  apitrary_launchpad_backend {
    server   unix:/tmp/thin.launchpad.0.sock;
    server   unix:/tmp/thin.launchpad.1.sock;
    <% if @nodeenv == "LIVE" %>
    server   unix:/tmp/thin.launchpad.2.sock;
    server   unix:/tmp/thin.launchpad.3.sock;
    <% end %>
}

server {
    listen <%= @port %>;
    server_name www.<%= @hostname %>;
    rewrite ^/(.*) http://<%= @hostname %>/$1 permanent;
}

server {
    listen <%= @port %>;
    server_name <%= @hostname %>;

    access_log /opt/nginx/logs/launchpad.apitrary.com_access.log;
    error_log /opt/nginx/logs/launchpad.apitrary.com_error.log;

    location / {
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://apitrary_launchpad_backend;
    }
}