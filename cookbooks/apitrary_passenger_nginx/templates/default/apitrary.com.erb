server {
    listen <%= @port %>;
    server_name <%= @hostname_long_old %>;
    rewrite ^/(.*) http://<%= @hostname %>/$1 permanent;
}

server {
    listen <%= @port %>;
    server_name <%= @hostname_long %>;
    rewrite ^/(.*) http://<%= @hostname %>/$1 permanent;
}

server {
    listen <%= @port %>;
    server_name <%= @hostname %>;

    access_log /opt/nginx/logs/www.apitrary.com_access.log;
    error_log /opt/nginx/logs/www.apitrary.com_error.log;

    root /home/rails/www/current/public;

    # ENV: <%= @nodeenv %>
    passenger_enabled on;
    rails_env <%= @rails_env %>;

    location ~* \.(jpg|gif|png|css|js)$ {
        if (-f $request_filename) {
            expires    max;
            break;
        }
    }
}