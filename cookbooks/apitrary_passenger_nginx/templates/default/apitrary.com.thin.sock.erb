upstream apitray_www_backend {
    server   unix:/tmp/thin.www.0.sock;
    server   unix:/tmp/thin.www.1.sock;
    <% if @nodeenv == "LIVE" %>
    server   unix:/tmp/thin.www.2.sock;
    server   unix:/tmp/thin.www.3.sock;
    <% end %>
}


server {
    listen <%= @port %>;
    server_name www.<%= @hostname %>;
    rewrite ^/(.*) http://<%= @hostname %>/$1 permanent;
}

server {
    listen <%= @port %>;
    server_name <%= @hostname %>;

    access_log /opt/nginx/logs/apitrary.com_access.log;
    error_log /opt/nginx/logs/apitrary.com_error.log;

    location / {
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://apitray_www_backend;
    }
}